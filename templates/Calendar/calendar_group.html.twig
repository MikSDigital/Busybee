{% trans_default_domain "Calendar" %}

{% block calendar_group_label %}{% endblock %}
{% block calendar_group_errors %}{% endblock %}

{% block calendar_group_widget %}
    {% spaceless %}
        {% if form.nameShort.vars.value is empty %}{% set gradeTitle = 'calendar.group.add.title'|trans %}{% else %}{% set gradeTitle = get_setting('student.groups._flip')[form.nameShort.vars.value] %}{% endif %}
        {% set h3Content = '<div class="collection-actions collection-panel">' %}
        {% if manager.isStudentInstalled and value is not null %}
        {% endif %}
        {% set h3Content = h3Content ~ deleteButton({title: 'calendar.group.remove.title', transDomain: 'Calendar', class: 'halflings halflings-erase btn btn-warning collection-remove collection-action', style: 'float: right;'}) %}
        {% set h3Content = h3Content ~ saveButton() %}
        {% set h3Content = h3Content ~ '<span style="float: right;">&nbsp;</span>' %}
        {% set h3Content = h3Content ~ upDownButton()|raw %}
        {% set h3Content = h3Content ~ '</div>' %}
        {% include 'Page/panelStart.html.twig' with {header: gradeTitle, panelStyle: 'info'} %}
<div class="container-fluid">
    <div class="row">
        <div class="col-4 card">
            {{ form_row(form.nameShort) }}
            {{ form_row(form.sequence) }}
            {{ form_row(form.calendar, {'value': app.request.get('id') }) }}
            {{ form_row(form.name) }}
        </div>
        <div class="col-4 card">
            {{ form_row(form.website) }}
        </div>
        <div class="col-4 card">
            {% if form.calendarTutor is defined %}
                {% set value = form.calendarTutor.vars.value %}
                {% if value is empty %}
                    {% set value = form.calendarTutor.vars.data %}
                {% endif %}
                {{ form_row(form.calendarTutor, {value: value}) }}
            {% endif %}
        </div>
    </div>
    {% if form.nameShort.vars.value is not empty and manager.isStudentInstalled %}
        <div class="row">
            <div class="col-12 card card-info">
                <div>{% if form.vars.value.id is not empty %}{{ editButton({title: 'calendar_group.manage.label', transDomain: 'Student', windowOpen: {route: path('student_add_to_calendar_group', {id: form.vars.value.id})}})|raw }}{% endif %}
                    {{ 'calendar_group.students.count'|trans({'%{count}': form.vars.value.students.count}) }}</div>
            </div>
        </div>
    {% endif %}
</div>
{% include 'Page/panelEnd.html.twig' %}
    {% endspaceless %}
{% endblock calendar_group_widget %}
