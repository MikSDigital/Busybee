{% trans_default_domain "Student" %}

{% block student_calendar_label %}{% endblock %}
{% block student_calendar_errors %}{% endblock %}

{% block student_calendar_widget %}
    {% set panelStyle = 'info' %}
    {% set transDomain = 'Student' %}
    {% set header = 'student_calendar.title' %}
    {% set h3Content = '<div class="collection-actions collection-panel">' %}
    {% set id = '' %}
    {% set calendarName = '(New)' %}
    {% if data is not null %}
        {% set calendarName = data.fullName %}
        {% set id = data.getId() %}
    {% endif %}
    {% set h3Content = h3Content ~ saveButton({style: ''}) %}
    {% set h3Content = h3Content ~ deleteButton({title: 'student_calendar.remove', transDomain: 'Student', mergeClass: 'removeStudentCalendar collection-remove collection-action', additional: {id: 'removeStudentCalendar' ~ id}, colour: 'warning', style: ''}) %}
    {% set h3Content = h3Content ~ '</div>' %}
    {% include 'Page/panelStart.html.twig' with {name: calendarName} %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-6 card">
                {{ form_row(form.calendarGroup) }}
            </div>
            <div class="col-6 card">
                {{ form_row(form.status) }}
                {{ form_row(form.student, {value: app.request.get('id')}) }}
            </div>
        </div>
    </div>
    {% include 'Page/panelEnd.html.twig' %}
{% endblock student_calendar_widget %}