{# src/General/SecurityBundle/Resources/views/Security/login_content.html.twig #}

{% trans_default_domain 'security' %}

{% form_theme form
    'FormTheme/bootstrap.html.twig' %}

<div class="form_error container"></div>

{{ form_start(form) }}
    {% set h3Content = miscButton({additional: {onclick: "this.form.action='" ~ path(get_SecurityRoute('security_password_forgot'))|raw ~ "'"}, transDomain: 'security', class: 'btn btn-info halflings halflings-question-sign', title: 'security.login.reset_password.label', type: 'submit'}) %}
    {% set h3Content = h3Content ~ miscButton({transDomain: 'security', class: 'btn btn-success halflings halflings-log-in', title: 'security.login.login.label', type: 'submit'}) %}
    {% include 'Page/panelStart.html.twig' with {header: 'security.login.login.label', transDomain: 'security'} %}
    <div id="form_body" class="container-fluid">
        {% if error %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true" class="halflings halflings-remove-circle"></span>
                </button>
            </div>
        {% endif %}

        <div class="row">
            <div class="well col-sm-6">
                <div class="form-group">
                    {{ form_row(form._username) }}
                    {{ form_row(form._token) }}
                </div>
            </div>
            <div class="well col-sm-6">
                <div class="form-group">
                    {{ form_row(form._password) }}
                </div>
            </div>
        </div>
    </div>
    {% include 'Page/panelEnd.html.twig' %}
{% do form.login.setRendered %}
{% dump(error) %}
{% do form.password_reset.setRendered %}
{{ form_end(form) }}
